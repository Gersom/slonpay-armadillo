.FAQ
  margin-top: 150px
  &__wrapper
    background: $color-bg-secondary
    border-radius: 40px
    position relative
    z-index 3
    padding: 50px
  
  &__title
    font-weight: 600
    font-size: 60px
    line-height: 1
    text-align: center
    color: #fff
    margin-top 15px
  
  &__question-wrapper
    border-bottom: 1px solid $color-tertiary
    padding-top 20px
    position: relative
    &:before
      content: 'v'
      position: absolute
      top: 35px
      right: 15px
      font-size: 14px
      font-weight: 800
  
  &__question
    display: block
    width: 100%
    height: 50px
    display: flex
    align-items: center
    cursor: pointer
    border: none

  &__response
    color $color-primary
    font-style: italic
    height: 0
    overflow: hidden
    transition: 1s ease all

  &__response.is-open
    height: 150px