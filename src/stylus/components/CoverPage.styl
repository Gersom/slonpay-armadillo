.CoverPage
  align-items: flex-end
  display: flex
  min-height: 500px
  position: relative

  &__background
    position: absolute
    height: auto
    right: 0
    top: 0
    width: 55%
    z-index 1

  &__content
    position: relative
    width: 60%
    z-index 2
  &__subtitle
    color: $color-secondary

  &__title
    color: #fff
    font-size: 72px
    line-height: 1
    margin 0 0 20px 0  
  &__paragraph
    color: $color-tertiary
    font-size: 16px
    font-weight: 400
    width: 70%
    margin 0
  &__button
    padding-top: 25px